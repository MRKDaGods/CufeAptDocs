<Page x:Class="MRK.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login">

    <StackPanel Margin="32" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label FontSize="48" FontWeight="Medium" HorizontalAlignment="Center" Content="CufeDocs Login" />

        <StackPanel Margin="20,30,20,20" Width="400">
            <Label Content="Username"/>
            <TextBox x:Name="textboxUsername" Margin="0,5,0,10" />

            <Label Content="Password" />
            <PasswordBox x:Name="textboxPwd" Margin="0,5,0,10" />

            <Button Margin="0,15,0,0" Content="Login" Click="OnLoginClick" />

            <Rectangle Margin="25" Fill="#FF3F3F46" Height="1" HorizontalAlignment="Stretch" />

            <Button Style="{StaticResource DarkButton}" Content="Register" Click="OnRegisterClick" />

            <Button Content="Quick" Margin="0, 30" Click="OnQuickLoginClick"/>
        </StackPanel>
    </StackPanel>
</Page>
