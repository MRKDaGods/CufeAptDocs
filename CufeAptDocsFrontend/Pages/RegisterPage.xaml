<Page x:Class="MRK.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MRK"
        mc:Ignorable="d"
        Title="Register" >
    <StackPanel Margin="32" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label FontSize="48" FontWeight="Medium" HorizontalAlignment="Center" Content="CufeDocs Register" />

        <StackPanel Margin="20,30,20,20" Width="400">
            <Label Content="Username"/>
            <TextBox x:Name="textboxUsername" Margin="0,5,0,10" />

            <Label Content="Email"/>
            <TextBox x:Name="textboxEmail" Margin="0,5,0,10" />

            <Label Content="Password" />
            <PasswordBox x:Name="textboxPwd" Margin="0,5,0,10" />

            <Label Content="Confirm Password" />
            <PasswordBox x:Name="textboxConfirmPwd" Margin="0,5,0,10" />

            <Button Margin="0,15,0,0" Content="Register" Click="OnRegisterClick" />

            <Rectangle Margin="25" Fill="#FF3F3F46" Height="1" HorizontalAlignment="Stretch" />

            <Button Style="{StaticResource DarkButton}" Content="Login" Click="OnLoginClick"/>
        </StackPanel>
    </StackPanel>
</Page>
